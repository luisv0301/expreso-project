---
import benefitOne from "../assets/benefit-1.svg";
import benefitTwo from "../assets/benefit-2.svg";
import benefitThree from "../assets/benefit-3.svg";
import Image from "astro/components/Image.astro";
const benefits = [
  {
    title: "Tecnología y trazabilidad",
    description:
      "Monitoreo satelital en tiempo real (homologado por CESVI) para que sigas cada paso de tu carga.",
    icon: benefitOne,
  },
  {
    title: "Flota propia y sustentable",
    description:
      "Unidades a gas y eléctricas, reduciendo emisiones sin comprometer la capacidad de distribución en todo el país.",
    icon: benefitTwo,
  },
  {
    title: "Certificaciones de excelencia",
    description:
      "Autorizados por Sedronar (cargas peligrosas), SENASA, y adheridos al Programa de Cuidado Responsable del Medio Ambiente (PCRMA).",
    icon: benefitThree,
  },
];
---

<ul class="benefit__list container__global">
  {
    benefits.map((benefit) => (
      <li class="benefit">
        <div class="benefit__content">
          <p class="benefit__title">{benefit.title}</p>
          <Image src={benefit.icon} alt={benefit.title} />
        </div>
        <p class="benefit__description">{benefit.description}</p>
      </li>
    ))
  }
</ul>

<style>
  .benefit__list {
    background-color: var(--black);
    display: flex;
    gap: 1rem;
    padding: 3rem 1rem;
    margin-block: 0;
    list-style: none;
  }
  .benefit {
    background-color: var(--gray-dark);
    flex: 1;
    padding: 2rem;
    color: var(--white);
  }

  .benefit__content {
    display: flex;
    gap: 1rem;
    justify-content: space-between;
    margin-bottom: 4rem;
  }

  .benefit__title {
    font-size: var(--step-0);
  }
  .benefit__description {
    opacity: 0.8;
  }
  @media (max-width: 750px) {
    .benefit__list {
      flex-direction: column;
    }
  }
</style>
