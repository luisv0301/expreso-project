---
import { Image } from "astro:assets";
import Button from "./Button.astro";
import servicesOne from "../assets/services.png";
const servicios = [
  {
    id: "logistica",
    titulo: "Optimizamos tu almacenamiento con tecnología y sustentabilidad",
    descripcion:
      "Gestionamos tus mercaderías en depósitos inteligentes (12.000 m²) con sistemas WMS y trazabilidad digital. Ideal para reducir costos y mejorar tu cadena de suministro.",
    imagen: servicesOne,
  },
  {
    id: "transporte",
    titulo: "Transporte seguro y a tiempo",
    descripcion:
      "Contamos con una flota moderna y sistema de rastreo satelital para entregas eficientes en todo el país.",
    imagen: servicesOne,
  },
  {
    id: "distribucion",
    titulo: "Distribución eficiente y planificada",
    descripcion:
      "Nuestra red de distribución permite entregas ágiles y controladas desde el centro logístico hasta el punto de venta.",
    imagen: servicesOne,
  },
];
---

<section class="servicios container__global">
  <div class="services__text">
    <svg
      width="184"
      height="25"
      viewBox="0 0 184 25"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      class="services__icon"
    >
      <path
        d="M183.215 12.8189L182.322 11.8843L171.274 0.836426L169.404 2.70677L178.219 11.5191L0 11.5191V14.1186L178.22 14.1186L169.405 22.9322L171.274 24.8013L182.322 13.7534L183.215 12.8189Z"
        fill="#EC1C24"></path>
    </svg>

    <div>
      <h2 class="services__title">Servicios que impulsan tu operación</h2>
      <p class="services__subtitle">
        Nos enfocamos en optimizar tus costos y tiempos, garantizando que cada
        carga llegue a su destino con la
        <span>máxima eficiencia, seguridad y cuidado del medio ambiente.</span>
      </p>
    </div>
  </div>
  <div class="servicios__tabs" role="tablist" aria-label="Servicios">
    {
      servicios.map((s, index) => (
        <button
          class="servicios__tab"
          id={`tab-${s.id}`}
          role="tab"
          aria-selected={index === 0}
          aria-controls={`panel-${s.id}`}
          tabindex={index === 0 ? "0" : "-1"}
        >
          {s.id.toUpperCase()}
        </button>
      ))
    }
  </div>

  <div class="servicios__contenidos">
    {
      servicios.map((s, index) => (
        <div
          class="servicios__panel"
          id={`panel-${s.id}`}
          role="tabpanel"
          aria-labelledby={`tab-${s.id}`}
          style={`display: ${index === 0 ? "flex" : "none"}`}
        >
          <div class="servicios__imagen">
            <Image
              src={s.imagen}
              alt={`Imagen de ${s.id}`}
              class="servicios__img"
            />
          </div>
          <div class="servicios__texto">
            <h2 class="servicios__titulo">{s.titulo}</h2>
            <p class="servicios__descripcion">{s.descripcion}</p>
            <Button href="#" label="Conocer más" />
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .servicios {
    padding-block: 8rem;
  }

  .services__text {
    display: flex;
    gap: 1rem;
  }

  .services__title {
    margin: 0;
    font-size: var(--step-7);
  }

  .services__subtitle {
    font-size: var(--step-1);
  }
  .services__subtitle > span {
    color: var(--primary-color);
  }
  .servicios__tabs {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: space-between;
    margin-block: 6rem;
  }

  .servicios__tab {
    flex: 1;
    border: 1px solid #ccc;
    background: #f9f9f9;
    padding: 0.6rem 1.5rem;
    border-radius: 999px;
    cursor: pointer;
    font-weight: bold;
    text-transform: uppercase;
    transition: background 0.3s ease;
  }

  .servicios__tab[aria-selected="true"] {
    background-color: var(--primary-color);
    color: white;
    border-color: var(--primary-color);
  }

  .servicios__contenidos {
    display: grid;
  }

  .servicios__panel {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 2rem;
  }

  .servicios__texto {
    flex: 2;
  }

  .servicios__imagen img {
    flex: 1;
  }
  .servicios__imagen img {
    object-fit: cover;
  }

  .servicios__titulo {
    font-size: var(--step-3);
    margin-bottom: 1rem;
  }

  .servicios__descripcion {
    margin-block: 5rem 1rem;
    color: #333;
  }

  .servicios__img {
    clip-path: polygon(0% 0%, 100% 0%, 100% 82%, 0% 100%);
  }
  @media (max-width: 750px) {
    .services__text {
      flex-direction: column;
      gap: 1rem;
    }
  }

  @media (max-width: 500px) {
    .servicios__panel {
      flex-direction: column;
    }

    .servicios__imagen {
      width: 100%;
    }

    .servicios__imagen img {
      width: 100%;
    }
  }

  @media (max-width: 420px) {
    .servicios__tabs {
      margin-block: 3rem;
    }

    .servicios__descripcion {
      margin-top: 1.5rem;
    }

    .servicios {
      padding-block: 6rem;
    }

    .services__title {
      font-size: var(--step-6);
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("astro:page-load", () => {
    gsap.from(".services__title", {
      scrollTrigger: ".services__title",
      x: -100,
    });

    gsap.from(".services__icon", {
      scrollTrigger: ".services__icon",
      x: -100,
      scaleX: 0,
    });

    // Tabs
    const tabs = document.querySelectorAll(".servicios__tab");
    const panels = document.querySelectorAll(".servicios__panel");
    const imgs = document.querySelectorAll(".servicios__img");
    const clipPaths = [
      "polygon(0% 0%, 100% 0%, 100% 82%, 0% 100%)",
      "polygon(0% 0%, 100% 44%, 0% 96%, 16% 46%)",
      "polygon(0% 0%, 100% 100%, 0% 100%, 100% 0%)",
    ];
    const initialClipPath = "polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)";

    tabs.forEach((tab, index) => {
      tab.addEventListener("click", () => {
        tabs.forEach((t) => {
          t.setAttribute("aria-selected", "false");
          t.setAttribute("tabindex", "-1");
        });

        panels.forEach((p) => (p.style.display = "none"));

        tab.setAttribute("aria-selected", "true");
        tab.setAttribute("tabindex", "0");
        panels[index].style.display = "flex";

        const currentImg = imgs[index];

        gsap.set(currentImg, { clipPath: initialClipPath });
        gsap.to(currentImg, { clipPath: clipPaths[index], duration: 0.5 });
      });
    });
  });
</script>
