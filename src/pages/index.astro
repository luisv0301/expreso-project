---
//export const prerender = false;

import Welcome from "../components/Welcome.astro";
import { Image } from "astro:assets";
import headerbg from "../assets/header-bg.png";
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import Benefits from "../components/Benefits.astro";
import Posts from "../components/Posts.astro";
import logo from "../assets/logo.png";
import Testimony2 from "../components/Testimony2.astro";
import Testimony from "../components/Testimony.astro";
import Services from "../components/Services.astro";
import Clients from "../components/Clients.astro";
import videoBg from "../assets/video-bg.mp4";
import Industries from "../components/Industries.astro";
import Client2 from "../components/Client2.astro";
import { loadQuery } from "../sanity/lib/loadquery";
import type { SanityDocument } from "@sanity/client";

const { data: logos } = await loadQuery<SanityDocument[]>({
  query: `*[_type == "clientes"]`,
});

const { data: posts } = await loadQuery<SanityDocument[]>({
  query: `*[_type == "post"]{
        title,
        slug,
        mainImage,
        publishedAt,
        extracto,
    }[0...4]`,
});

const { data: testimonials } = await loadQuery<SanityDocument[]>({
  query: `*[_type == "testimonio"]`,
});
---

<Layout>
  <header>
    <div class="header">
      <video
        loop
        muted
        playsinline
        preload="auto"
        class="header__bg"
        poster={headerbg.src || undefined}
      >
        <source src={videoBg} type="video/mp4" />
        Tu navegador no soporta videos.
      </video>
      <div class="header__content container__global">
        <h1 class="header__title">Logística eficiente, segura y sustentable</h1>
        <p class="header__subtitle">
          En Expreso Vitale, nos dedicamos a simplificar tu cadena de suministro
          con soluciones integrales para el movimiento y almacenamiento de
          mercaderías
        </p>
        <Button href="#contacto" label="Solicitar cotización gratuita" />
      </div>
    </div>
    <div class="header__benefits">
      <Benefits />
    </div>
  </header>
  <div>
    <Services />
  </div>
  <section>
    <Industries />
  </section>

  <div class="environment__container--overflow">
    <section class="environment__container">
      <div class="environment container__global">
        <h2 class="environment__title">
          Expertos en el manejo responsable de cargas peligrosas
        </h2>
        <div class="environment__content">
          <div>
            <p class="environment__fact">70%</p><p>de nuestra operación</p>
          </div>
          <div class="environment__text">
            <p>
              Nos especializamos en transporte de cargas peligrosas. Nuestra
              flota cumple con los más altos estándares de seguridad y
              normativas legales, asegurando que tus mercancías críticas lleguen
              a destino sin riesgos.
            </p>
            <Button href="/servicios" label="Conocer más" />
          </div>
        </div>
      </div>
    </section>
  </div>

  <Client2 logos={logos} />
  <section>
    <Testimony2 testimonials={testimonials} />
  </section>

  {
    posts.length > 0 && (
      <section class="news container__global">
        <h2 class="news__title">Noticias</h2>
        <Posts posts={posts} />
      </section>
    )
  }
</Layout>

<style>
  .header {
    min-height: 75vh;
    display: grid;
    position: relative;
    align-items: center;
    overflow: clip;
  }

  .header::after {
    content: "";
    position: absolute;
    inset: 0;
    z-index: -1;
    background:
      linear-gradient(
        0deg,
        rgba(0, 0, 0, 0) 69.85%,
        rgba(0, 0, 0, 0.12) 99.79%
      ),
      linear-gradient(
        181deg,
        rgba(0, 0, 0, 0) 46.55%,
        rgba(4, 4, 4, 0.72) 81.76%,
        #050505 93.9%
      );
  }

  .header__bg {
    width: 100%;
    object-fit: cover;
    position: absolute;
    inset: 0;
    z-index: -1;
    height: 100%;
    filter: blur(20px);
  }

  .header__content {
    width: 100%;
  }
  .header__content > * + * {
    margin-top: 1rem;
    color: var(--white);
  }

  .header__title {
    max-width: 650px;
    color: var(--white);
  }

  .header__subtitle {
    max-width: 386px;
    opacity: 0.8;
    margin-bottom: 3rem;
  }

  .header__benefits {
    background-color: var(--black);
  }

  /* Environment */
  .environment__container {
    background: url("../assets/danger-load.jpg") no-repeat center center;
    background-size: cover;
    background-attachment: fixed;
    padding-block: 5rem;
    height: 700px;
    box-sizing: border-box;
    position: relative;
  }

  .environment__container::before {
    content: "";
    position: absolute;
    z-index: 1;
    inset: 0;
    background: linear-gradient(
      180deg,
      #050505 -14.97%,
      rgba(5, 5, 5, 0.41) 13.87%,
      rgba(5, 5, 5, 0) 45.11%
    );
  }

  .environment__container::after {
    content: "";
    position: absolute;
    z-index: 1;
    inset: 0;
    background: linear-gradient(
      0deg,
      #050505 -5.93%,
      rgba(5, 5, 5, 0.41) 14.83%,
      rgba(5, 5, 5, 0) 45.99%
    );
  }

  .environment__container--overflow {
    overflow: hidden;
    height: 680px;
    box-sizing: border-box;
  }
  .environment {
    height: 100%;
    flex-direction: column;
    display: flex;
    justify-content: space-between;
    color: var(--white);
    position: relative;
    z-index: 2;
  }
  .environment__content {
    display: flex;
    justify-content: space-between;
    align-items: end;
  }
  .environment__title {
    color: var(--white);
    margin: 0;
    font-size: var(--step-5);
  }
  .environment__fact {
    margin: 0;
    font-size: var(--step-7);
    line-height: 1;
  }

  .environment__text {
    max-width: 340px;
  }

  .environment__text p {
    margin-bottom: 1rem;
  }

  .news {
    margin-block: 5rem;
  }
  .news__title {
    margin-bottom: 4rem;
  }

  /* Clientes */
  .clientes {
    padding-block: 4rem;
    border-top: 1px solid #e0e0e0;
  }

  .clientes__encabezado {
    display: flex;
    gap: 1rem;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .clientes__titulo {
    font-size: var(--step-0);
    text-transform: uppercase;
    margin: 0;
    flex: 1;
  }

  .clientes__descripcion {
    flex: 2;
    margin: 0;
    min-width: 280px;
    color: #444;
    line-height: 1.5;
  }

  .clientes__logos {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 1rem;
    border-top: 1px solid #e0e0e0;
    padding-top: 1.5rem;
  }

  .clientes__logo-item {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    border: 1px solid #e0e0e0;
    background-color: #fff;
  }

  .clientes__logo-img {
    max-width: 100%;
    max-height: 60px;
    object-fit: contain;
  }
  .news__title {
    font-size: var(--step-0);
    text-transform: uppercase;
  }
  @media (max-width: 750px) {
    .environment__content {
      flex-direction: column;
      align-items: start;
      gap: 1.5rem;
    }

    .environment__text {
      max-width: 100%;
    }
  }

  @media (max-width: 400px) {
    .news__title {
      margin-bottom: 1.5rem;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("astro:page-load", (event) => {
    let tl = gsap.timeline({
      onComplete: () => {
        const video = document.querySelector(".header__bg");
        if (video) {
          video.play();
        }
      },
    });
    tl.from(".header__title", { opacity: 0, y: 50, duration: 0.3 });
    tl.from(".header__subtitle", { opacity: 0, y: 50, duration: 0.3 });
    tl.to(".header__bg", { filter: "blur(0px)", duration: 0.8 });
  });
</script>
